@page
@model WebApp.Pages.Servicios.EditModel
@{
}
<div id="AppEdit" class="container">
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue?"Actualizar":"Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdServicio" />

                <div class="form-group mb-3">
                    <label for="Entity.NombreServicio" class="form-label">N. del servicio</label>
                    <input type="text" class="form-control" asp-for="Entity.NombreServicio" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.PlazoEntrega" class="form-label">P de entrega</label>
                    <input type="text" class="form-control" asp-for="Entity.PlazoEntrega" maxlength="250" required>
                </div>

                <div class="form-group  mb-3">
                    <label for="Entity.CostoServicio" class="form-label">C. del servicio</label>
                    <input type="text" class="form-control" asp-for="Entity.CostoServicio" maxlength="250" required>
                </div>
                <div class="form-group  mb-3">
                    <label for="Entity.Estado" class="form-label">Estado</label>
                    <input type="text" class="form-control" asp-for="Entity.Estado" maxlength="250" required>
                </div>

                <div class="form-group  mb-3">
                    <label for="Entity.CuentaContable" class="form-label">Cta. contable</label>
                    <input type="text" class="form-control" asp-for="Entity.CuentaContable" maxlength="250" required>
                </div>




                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary">
                            @(Model.id.HasValue?"Actualizar":"Agregar")
                        </button>
                    </div>
                </div>



            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script defer src="~/App/Proveedor/Edit.js"></script>

}