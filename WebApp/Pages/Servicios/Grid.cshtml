@page
@model WebApp.Pages.Servicios.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Servicios
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-striped table table-hover table table-bordered ">
                        <thead>
                            <tr>
                                <th>IdServicio</th>
                                <th>Nombre del servicio</th>
                                <th>Plazo de entrega</th>
                                <th>Costo del servicio</th>
                                <th>Estado</th>
                                <th>Cuenta contable</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridLista)
                            {
                <tr>
                    <td>@item.IdServicio</td>
                    <td>@item.NombreServicio</td>
                    <td>@item.PlazoEntrega</td>
                    <td>@item.CostoServicio</td>
                    <td>@item.Estado</td>
                    <td>@item.CuentaContable</td>
                    
                    <td>
                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdServicio">
                            <i class='bx bx-edit-alt'></i>
                        </a>
                        <button type="button" class="btn btn-danger" onclick="GridServicio.OnclickEliminar(@item.IdServicio)">
                            <i class='bx bxs-trash'></i>
                        </button>
                    </td>
                </tr>
}
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>


</div>
@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Servicio/Grid.js"></script>
}