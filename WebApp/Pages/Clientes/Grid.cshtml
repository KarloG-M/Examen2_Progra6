@page
@model WebApp.Pages.Clientes.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Servicios
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-striped table table-hover table table-bordered ">
                        <thead>
                            <tr>



                                <th>IdCliente</th>
                                <th>Identificacion</th>
                                <th>IdTipoIdentificacion</th>
                                <th>Nombre</th>
                                <th>PrimerApellido</th>
                                <th>SegundoApellido</th>
                                <th>FechaNacimiento</th>
                                <th>Nacionalidad</th>
                                <th>FechaDefuncion</th>
                                <th>Genero</th>
                                <th>NombreApellidosPadre</th>
                                <th>NombreApellidosMadre</th>
                                <th>Pasaporte</th>
                                <th>CuentaIBAN</th>
                                <th>CorreoNotifica</th>
                               


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdCliente</td>
                                <td>@item.Identificacion</td>
                                <td>@item.IdTipoIdentificacion</td>
                                <td>@item.Nombre</td>
                                <td>@item.PrimerApellido</td>
                                <td>@item.SegundoApellido</td>
                                <td>@item.FechaNacimiento</td>
                                <td>@item.Nacionalidad</td>
                                <td>@item.FechaDefuncion</td>
                                <td>@item.Genero</td>
                                <td>@item.NombreApellidosMadre</td>
                                <td>@item.NombreApellidosMadre</td>
                                <td>@item.Pasaporte</td>
                                <td>@item.CuentaIBAN</td>
                                <td>@item.CorreoNotifica</td>


                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdCliente">
                                        <i class='bx bx-edit-alt'></i>
                                    </a>
                                    <button type="button" class="btn btn-danger" onclick="GridServicio.OnclickEliminar(@item.IdCliente)">
                                        <i class='bx bxs-trash'></i>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>


</div>
@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Clientes/Grid.js"></script>
}