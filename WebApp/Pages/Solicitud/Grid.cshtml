@page
@model WebApp.Pages.Solicitud.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
          Solicitud
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-striped table table-hover table table-bordered ">
                        <thead>
                            <tr>
                                <th>Id solicitud</th>
                                <th>Id cliente</th>
                                <th>Id servicio</th>
                                <th>Cantidad</th>
                                <th>Monto</th>
                                <th>F. Entrega</th>
                                <th>U. Entrega</th>
                                <th>Observaciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.IdSolicitud</td>
                                    <td>@item.IdCliente</td>
                                    <td>@item.IdServicio</td>
                                    <td>@item.Cantidad</td>
                                    <td>@item.Monto</td>
                                    <td>@item.FechaEntrega</td>
                                    <td>@item.UsuarioEntrega</td>
                                    <td>@item.Observaciones</td>

                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdSolicitud">
                                            <i class='bx bx-edit-alt'></i>
                                        </a>
                                        <button type="button" class="btn btn-danger" onclick="GridSolicitud.OnclickEliminar(@item.IdSolicitud)">
                                            <i class='bx bxs-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>


</div>
@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Servicios/Grid.js"></script>
}